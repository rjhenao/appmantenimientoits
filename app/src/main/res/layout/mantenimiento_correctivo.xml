<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:attr/colorBackground">

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header global -->
        <include
            layout="@layout/header_global"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true" />

        <!-- Contenido desplazable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tarjeta informativa del equipo -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardInfoEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/azul"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvLocacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Locación: --"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                        <TextView
                            android:id="@+id/tvSistema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sistema: --"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                        <TextView
                            android:id="@+id/tvSubsistema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subsistema: --"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                        <TextView
                            android:id="@+id/tvTipoEquipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de equipo: --"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                        <TextView
                            android:id="@+id/tvTagEquipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tag del equipo: --"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Empleados -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar empleados:"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <GridLayout
                    android:id="@+id/checkboxContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal" />

                <!-- Campos de texto Material -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/azul"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescripcionFalla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descripción del problema"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/azul"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDiagnostico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Diagnóstico preliminar"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/azul"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAcciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Acciones correctivas realizadas"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/azul"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRepuestos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Repuestos o materiales usados"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Estado final (Exposed Dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="@color/azul"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:endIconMode="dropdown_menu">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spEstadoFinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Estado final"
                        app:simpleItems="@array/estado_final"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/azul"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCausaRaiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Causa raíz (si se conoce)"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/azul"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etObservaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Observaciones adicionales"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón para agregar foto -->
                <Button
                    android:id="@+id/btnAgregarFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/azul"
                    android:text="Agregar Foto"
                    android:textColor="@android:color/white" />

                <!-- RecyclerView para fotos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFotos"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never" />

                <!-- Botón Guardar -->
                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Guardar Mantenimiento" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_global"
        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
