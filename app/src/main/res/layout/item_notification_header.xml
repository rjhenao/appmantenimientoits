<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNotificationTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tickets Pendientes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTicketCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/design_default_color_primary" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvNotificationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Se encontraron tickets que requieren atención."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Botón de sincronizar - OCULTO -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSincronizarTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Sincronizar Ahora"
            android:visibility="gone"
            app:icon="@drawable/ic_sync"
            app:iconGravity="textStart" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
